@using Ruanal.Web
<!DOCTYPE html>
@{
    string urlkey = this.UrlKey();
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css?v=20170912" rel="stylesheet" />
    @if (this.VTheme() == "gray")
    {
    <link href="~/Content/bootstrap.slate.css" rel="stylesheet" />
    <link href="~/Content/main.gray.css?v=20170912" rel="stylesheet" />
    }
    else
    {
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/main.default.css?v=20170912" rel="stylesheet" />
    }
    <link href="~/Scripts/DatePicker/skin/WdatePicker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/DatePicker/WdatePicker.js"></script>
    <script src="~/Scripts/main.js?v=20170912"></script>
    @RenderSection("Head", false)
</head>
<body>
    @RenderBody()

    <div class="btn-group btn-group-sm" style="position:fixed; top:10px; right:10px;">
        @if (this.VTheme() == "gray")
        {
            <button class="btn btn-default active" onclick="setvtheme('gray')">灰色</button>
            <button class="btn btn-default" onclick="setvtheme('')">亮色</button>
        }
        else
        {
            <button class="btn btn-default" onclick="setvtheme('gray')">灰色</button>
            <button class="btn btn-default active" onclick="setvtheme('')">亮色</button>
        }
    </div>

</body>
</html>
